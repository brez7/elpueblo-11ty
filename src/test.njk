<section id="latest-blog" class="section light-background">
  <div class="container" data-aos="fade-up">
    <h2 class="h2-format">Latest Blog Posts</h2>
    <div class="row gy-4 justify-content-start">
      {% for post in collections.blog | slice(0, 3) %}
        <div class="col-lg-4 col-md-6 d-flex">
          <div class="card w-100 h-100">
            <a href="{{ post.url }}">
              <img
                src="{{ post.data.image or '/assets/img/menu-items/soon.jpg' }}"
                alt="{{ post.data.title }}"
                class="card-img-top"
                style="object-fit: cover; height: 200px"
              />
            </a>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-1">
                <a href="{{ post.url }}" class="text-dark text-decoration-none">
                  {{ post.data.title }}
                </a>
              </h5>
              <p class="text-muted mb-2" style="font-size: 0.9rem;">
                {{ post.date | date("MMMM d, yyyy") }}
              </p>
              <p class="card-text">
                {{ post.data.description or post.templateContent | striptags | truncate(100, true) }}
              </p>
              <div class="mt-auto">
                <a href="{{ post.url }}" class="btn-read-more">Read More</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


