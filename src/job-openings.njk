<script>
  const form = document.getElementById("jobApplicationForm");
  const responseBox = document.createElement("div");
  responseBox.style.marginTop = "1.5em";
  responseBox.style.fontWeight = "bold";
  form.appendChild(responseBox);

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const payload = {};
    formData.forEach((val, key) => (payload[key] = val));

    try {
      const res = await fetch("https://contact-form-api-fvmy7faymq-uc.a.run.app/jobs", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload),
      });

      const result = await res.json();
      responseBox.textContent = result.message || "Application submitted successfully!";
      form.reset();
    } catch (err) {
      responseBox.textContent = "⚠️ There was a problem submitting your application.";
    }
  });
</script>
