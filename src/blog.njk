<section id="blog" class="blog section">
  <div class="container section-title" data-aos="fade-up">
    <hr style="border: none; height: 5px; background: #7f120b; margin: 20px 0; opacity: 1 !important;" />
    <h1 class="h1-format" style="color:red;">Latest News from El Pueblo Mexican Food</h1>
    <p style="font-size: 21px; text-align: center">
      Discover new dishes, behind-the-scenes stories, and whatâ€™s cooking next.
    </p>
    <hr style="border: none; height: 5px; background: #7f120b; margin: 20px 0; opacity: 1 !important;" />
  </div>

<div class="container">
  <div class="row gx-4 gy-4 justify-content-start">
    {% for post in collections.blog | reverse %}
    <div class="col-lg-3 col-md-6 d-flex">
      <div class="card w-100 h-100">
        <a href="{{ post.url }}">
          <img
            src="{{ post.data.image or '/assets/img/menu-items/soon.jpg' }}"
            class="card-img-top"
            alt="{{ post.data.title }}"
            style="object-fit: cover; height: 200px"
          />
        </a>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-1">
            <a href="{{ post.url }}" class="text-dark text-decoration-none">
              {{ post.data.title }}
            </a>
          </h5>
          <p class="text-muted mb-2" style="font-size: 0.9rem;">
            {{ post.date | date("MMMM d, yyyy") }}
          </p>
          <p class="card-text">
            {{ post.data.description or post.templateContent | striptags | truncate(100, true) }}
          </p>
          <div class="mt-auto">
            <a href="{{ post.url }}" class="btn-read-more"> Read More </a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

</div>

</section>
