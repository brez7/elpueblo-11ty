<section id="blog" class="blog section">
  <div class="container section-title" data-aos="fade-up">
  <h1>Blog Posts</h1>
  {% for post in collections.blog %}
    <article>
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p>{{ post.data.description }}</p>
    </article>
  {% endfor %}
  </div>
</section>
